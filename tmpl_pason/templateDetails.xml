<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE install PUBLIC "-//Joomla! 2.5//DTD template 1.0//EN" "http://www.joomla.org/xml/dtd/2.5/template-install.dtd">
<extension version="3.1" type="template" client="site">
    <name>tmpl_pason</name>
    <version>1.0</version>
    <creationDate>02/04/2015</creationDate>
    <author>Chad Windnagle - Cohesive Websites</author>
    <authorEmail>chad@cohesivewebsites.com</authorEmail>
    <copyright>Copyright (C) 2015 Servant Holdings, LLC</copyright>
    <description>Custom Bootstrap Responsive Pason template</description>
    <files>
        <filename>templateDetails.xml</filename>
        <filename>index.php</filename>
        <folder>less</folder>
        <folder>css</folder>
    </files>
    <positions>
        <position>logo</position>
    </positions>
    <config>
        <fields name="params">
            <fieldset name="advanced">
                <field name="main_bg_image"     type="media" default="" label="Background Image" description="The background image" />
                <field name="image_width"       type="text" label="Image width" description="the width of the image" />
                <field name="image_height"      type="text" label="Image height" description="the height of the image" />
                <field name="image_max_height"  type="text" label="Image Max Height" description="the maximum image height" />
                <field name="div_id"            type="text" label="Div ID" description="the html div id" />
                <field name="showtitles" type="list" label="Show Carousel Titles">
                    <option value="0">No</option>
                    <option value="1">Yes</option>
                </field>
            </fieldset>
        </fields>
    </config>
</extension>